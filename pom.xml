<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.eqasim.lyon</groupId>
    <artifactId>Lyon_VDF</artifactId>
    <version>1.0-SNAPSHOT</version>

    <parent>
		<groupId>org.eqasim</groupId>
		<artifactId>eqasim</artifactId>
		<version>2.0.0</version> <!-- x-release-please-version -->
		<relativePath>../pom.xml</relativePath>
	</parent>

    <dependencies>
        <!-- MATSim -->
        <dependency>
            <groupId>org.matsim</groupId>
            <artifactId>matsim</artifactId>
            <version>14.0</version>
        </dependency>

        <!-- eQasim Core -->
        <dependency>
            <groupId>org.eqasim</groupId>
            <artifactId>core</artifactId>
            <version>2.0.0</version>
        </dependency>

        <!-- eQasim IDF Configurator -->
        <dependency>
            <groupId>org.eqasim</groupId>
            <artifactId>ile_de_france</artifactId>
            <version>2.0.0</version>
        </dependency>

        <!-- Guava pour Resources.getResource() -->
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>31.1-jre</version>
        </dependency>
    </dependencies>

    <profiles>
		<profile>
			<id>standalone</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-shade-plugin</artifactId>
						<version>3.6.0</version>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>shade</goal>
								</goals>
								<configuration>
									<transformers>
										<transformer
											implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
									</transformers>
									<filters>
										<filter>
											<artifact>*:*</artifact>
											<excludes>
												<exclude>META-INF/*.SF</exclude>
												<exclude>META-INF/*.DSA</exclude>
												<exclude>META-INF/*.RSA</exclude>
											</excludes>
										</filter>
									</filters>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>